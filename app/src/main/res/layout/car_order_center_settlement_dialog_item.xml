<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/car_order_center_settlement_dialog_item_ll"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/lv_item_click_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/car_order_center_settlement_dialog_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/car_order_center_settlement_dialog_item_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/car_order_center_settlement_dialog_search"
            android:padding="10dp"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        style="@style/GrayLine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
</LinearLayout>