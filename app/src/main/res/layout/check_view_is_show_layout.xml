<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.giotto.mttext.demo.activitys.MyScrollView
        android:id="@+id/check_myscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pay_bottom_layout"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/check_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/blue_0090FF"
                android:gravity="center"
                android:padding="10dp"
                android:text="我是按钮" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/ic_launcher" />

            <RelativeLayout
                android:id="@+id/car_order_detail_status_tracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/car_order_detail_status_image_small_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/car_order_detail_tracking_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/car_order_detail_tracking_iv"
                    android:layout_toRightOf="@+id/car_order_detail_status_image_small_iv"
                    android:text="追踪最新信息"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/car_order_detail_tracking_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/car_order_detail_tracking_tv"
                    android:layout_below="@+id/car_order_detail_tracking_tv"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@+id/car_order_detail_tracking_iv"
                    android:text="追踪最新信息\n追踪最新信息\n追踪最新信息\n追踪最新信息\n追踪最新信息\n追踪最新信息"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/car_order_detail_tracking_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/ic_launcher" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/car_order_detail_message_info_image_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="约定过户时间："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_message_info_tv1"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="过户地点："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_message_info_tv2"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="看车方式："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_message_info_tv3"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="提车地点："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv4"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_order_detail_struggle_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/car_order_detail_struggle_image_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/car_order_detail_struggle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/car_order_detail_struggle_image_iv"
                    android:text="争议处理进度"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/ic_launcher" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:text="车辆合手价："
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/car_order_detail_heshoujia_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="13dp"
                    android:paddingTop="10dp"
                    android:text="123¥"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/car_order_detail_chakangengduo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/car_order_detail_heshoujia_tv"
                    android:paddingRight="13dp"
                    android:paddingTop="3dp"
                    android:text="查看明细 >"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/car_order_detail_money_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_chakangengduo_tv"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/car_order_detail_money_lv"
                    android:padding="13dp"
                    android:text="订单总价："
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/car_order_detail_total_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/car_order_detail_money_lv"
                    android:paddingRight="11dp"
                    android:paddingTop="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp">

                <TextView
                    android:id="@+id/car_order_detail_order_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_orderid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/car_order_detail_order_tv1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_order_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_order_tv1"
                    android:layout_marginTop="6dp"
                    android:text="订单确认时间："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_ordertime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_order_tv2"
                    android:layout_toRightOf="@+id/car_order_detail_order_tv2"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/car_order_detail_vincode_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_order_tv2"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIN码："
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/car_order_detail_vincode_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_order_detail_tips_ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_vincode_ll"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/car_order_detail_tips_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_order_detail_money2_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_tips_ll1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.example.giotto.mttext.demo.activitys.MyScrollView>

    <TextView
        android:id="@+id/check_tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/blue_0090FF"
        android:gravity="center"
        android:padding="10dp"
        android:text="我是按钮"
        android:visibility="gone" />
</LinearLayout>