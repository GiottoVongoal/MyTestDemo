<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.giotto.mttext.demo.scrollviewtop.ObservableScrollView
        android:id="@+id/cyp_user_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <include layout="@layout/include_mycyp_userinfo" />

            <include layout="@layout/include_mycyp_content" />

            <include layout="@layout/include_mycyp_content" />
        </LinearLayout>
    </com.example.giotto.mttext.demo.scrollviewtop.ObservableScrollView>

    <LinearLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_white"
            android:drawableLeft="@mipmap/ic_rest_day"
            android:drawablePadding="10dp"
            android:editable="false"
            android:gravity="center_vertical"
            android:hint="查商标"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>