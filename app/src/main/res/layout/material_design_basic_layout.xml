<?xml version="1.0" encoding="utf-8"?>

<com.example.giotto.mttext.demo.materialdesign.DragFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/material_design_basic_drag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/material_design_basic_view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_shopping_cart"
        android:elevation="10dp"
        android:gravity="center"
        android:text="我可以移动" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom">

        <View
            android:id="@+id/material_design_basic_view2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/item_bg" />
    </RelativeLayout>
</com.example.giotto.mttext.demo.materialdesign.DragFrameLayout>