<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.giotto.mttext.demo.mycustomviewltest.MyTopBar
        android:id="@+id/view_top_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray_55b8b8b8"
        app:leftBackground="@mipmap/ic_close_white"
        app:leftText="左边"
        app:leftTextColor="@color/blue_0090FF"
        app:rightBackground="@mipmap/login_delete_grey"
        app:rightText="右边"
        app:rightTextColor="@color/blue3"
        app:title="标题"
        app:titleTextColor="@color/black3"
        app:titleTextSize="12sp" />

    <TextView
        android:id="@+id/my_demo_son_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaa" />


    <com.example.giotto.mttext.demo.mycustomviewltest.MyView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/blue3" />

    <com.example.giotto.mttext.demo.mycustomviewltest.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="我是自定义TextView" />

    <com.example.giotto.mttext.demo.mycustomviewltest.BlingTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="我是自定义动态文字闪动的TextView" />
</LinearLayout>