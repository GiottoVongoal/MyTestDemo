<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_picture_full_screen"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_picture_full_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent_gray2"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_picture_full_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <com.example.giotto.mttext.demo.picturefullscreen.MyListView
        android:id="@+id/lv_picture_full_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>