<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/show_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pay_bottom_layout"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@mipmap/c">

                <TextView
                    android:id="@+id/car_order_detail_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/car_order_detail_status_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_status_tv"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/car_order_detail_status_image_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="34dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_order_detail_status_tracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/car_order_detail_status_image_small_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:id="@+id/car_order_detail_tracking_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/car_order_detail_tracking_iv"
                    android:layout_toRightOf="@+id/car_order_detail_status_image_small_iv"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/car_order_detail_tracking_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/car_order_detail_tracking_tv"
                    android:layout_below="@+id/car_order_detail_tracking_tv"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@+id/car_order_detail_tracking_iv"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/car_order_detail_tracking_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/car_order_detail_message_info_image_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="约定过户时间："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_message_info_tv1"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="过户地点："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_message_info_tv2"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="看车方式："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_message_info_tv3"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/car_order_detail_message_info_image_iv"
                    android:text="提车地点："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_message_info_content_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_message_info_tv4"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/car_order_detail_struggle_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/car_order_detail_struggle_image_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:id="@+id/car_order_detail_struggle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/car_order_detail_struggle_image_iv"
                    android:text="争议处理进度"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:text="车辆合手价："
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/car_order_detail_heshoujia_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="13dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/car_order_detail_chakangengduo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/car_order_detail_heshoujia_tv"
                    android:paddingRight="13dp"
                    android:paddingTop="3dp"
                    android:text="查看明细 >"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/car_order_detail_money_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_chakangengduo_tv"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/car_order_detail_heshoujia_tv"
                        android:paddingRight="13dp"
                        android:paddingTop="3dp"
                        android:text="明细1 >"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/car_order_detail_money_lv"
                    android:padding="13dp"
                    android:text="订单总价："
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/car_order_detail_total_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/car_order_detail_money_lv"
                    android:paddingRight="11dp"
                    android:paddingTop="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp">

                <TextView
                    android:id="@+id/car_order_detail_order_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_orderid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/car_order_detail_order_tv1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_order_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_order_tv1"
                    android:layout_marginTop="6dp"
                    android:text="订单确认时间："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/car_order_detail_ordertime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/car_order_detail_order_tv2"
                    android:layout_toRightOf="@+id/car_order_detail_order_tv2"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/car_order_detail_vincode_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_order_tv2"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIN码："
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/car_order_detail_vincode_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_order_detail_tips_ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_order_detail_vincode_ll"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/car_order_detail_tips_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/pay_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/car_order_detail_btn_zhifu_tv"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/car_order_detail_btn_rate_tv"
            android:background="@mipmap/car_order_center_btn_bg_red"
            android:gravity="center"
            android:text="去支付"
            android:visibility="visible" />

        <TextView
            android:id="@+id/car_order_detail_btn_zhifuinfo_tv"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/car_order_detail_btn_zhifu_tv"
            android:gravity="center"
            android:text="支付详情"
            android:visibility="visible" />

        <TextView
            android:id="@+id/car_order_detail_btn_zhuizong_tv"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/car_order_detail_btn_zhifuinfo_tv"
            android:gravity="center"
            android:text="订单追踪"
            android:visibility="visible" />

        <TextView
            android:id="@+id/car_order_detail_btn_zhengyi_tv"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/car_order_detail_btn_zhuizong_tv"
            android:gravity="center"
            android:text="争议详情"
            android:visibility="visible" />

        <TextView
            android:id="@+id/car_order_detail_btn_rate_tv"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="评价"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/car_order_center_btn_bg_red"
            android:gravity="center"
            android:text="I am hidden"
            android:textSize="20sp" />
    </FrameLayout>
</RelativeLayout>