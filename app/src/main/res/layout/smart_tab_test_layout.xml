<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <com.example.giotto.mttext.demo.smarttab.SmartTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:stl_clickable="true"
            app:stl_defaultTabBackground="@color/transparent"
            app:stl_defaultTabTextAllCaps="true"
            app:stl_defaultTabTextColor="@color/tab_title_color_selector"
            app:stl_defaultTabTextHorizontalPadding="42dp"
            app:stl_defaultTabTextSize="14dp"
            app:stl_distributeEvenly="false"
            app:stl_dividerColor="@color/transparent"
            app:stl_dividerThickness="0dp"
            app:stl_drawDecorationAfterTab="false"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorColor="@color/black3"
            app:stl_indicatorCornerRadius="1dp"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorInFront="false"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="2dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorWithoutPadding="true"
            app:stl_titleOffset="auto_center"
            app:stl_underlineColor="@color/transparent"
            app:stl_underlineThickness="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/select_circle_color" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>