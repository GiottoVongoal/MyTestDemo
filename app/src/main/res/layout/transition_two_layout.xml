<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transition_two_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giotto.mttext.demo.materialdesign.TransitionTwo_Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/transition_two_view_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/deadpool"
            android:orientation="vertical">

            <View
                android:id="@+id/transition_two_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="350dp"
                android:background="@drawable/item_bg"
                android:transitionName="square_blue" />
        </LinearLayout>

        <ImageView
            android:id="@+id/transition_two_iv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="70dp"
            android:src="@mipmap/ic_launcher"
            android:transitionName="transition_list" />
    </FrameLayout>
</RelativeLayout>